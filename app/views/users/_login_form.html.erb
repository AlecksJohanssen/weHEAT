<div class="ui middle aligned center aligned grid">
  <%= image_tag ('gdg-vietnam.png'), class: 'login-logo' %>
    <%= form_for(:user, :html => {:class => "ui form", :remote => true,:id => 'student_modal_form'}, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="ui two column center aligned grid">
        <div class="column">
          <div class="description">
            <div class="ui container">
            <div class="field">
              <%= f.email_field :email, autofocus: true, placeholder: "Your Email Here" %>
            </div>
            <div class="field">
              <%= f.password_field :password, autofocus: true, placeholder: "Your Password Here" %>
            </div>
            <div class="field">
              <button type="submit" class="ui right labeled icon fluid orange button" onclick="loading(this)">
                <i class="right arrow icon"></i>
                SIGN IN 
              </button>
            </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
</div>
